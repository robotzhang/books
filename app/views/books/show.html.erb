<div class="clearfix">
  <div class="pull-left">
    <img src="<%= @book.cover_image %>" title="<%= @book.name %>" />
  </div>
  <div>
    <p><%= @book.name %></p>
    <div><%= @book.sub_name %></div>
    <div>
      <a class="btn btn-mini" href="/books/1/like">想读</a>
      <a class="btn" href="/books/1/read">立刻阅读</a>
    </div>
  </div>
</div>

<div>
  目录：
  <% chapter_ids = @schedules.map do |schedule| schedule.chapter_id end %>
  <ol>
    <% @book.chapters.each do |chapter| %>
    <li>
      <a href="<%= chapter_url(chapter) %>"><%= chapter.title %></a>
      <% if chapter_ids.include?(chapter.id) %>
      已读
      <% end %>
    </li>
    <% end %>
  </ol>
</div>