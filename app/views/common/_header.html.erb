<div class="header">
  <div class="container">
    <h1 class="pull-left"><a href="<%= root_url %>">木书架</a><small>最有营养的在线读书社区</small></h1>
    <!--ul class="top-nav pull-left unstyled">
      <li><a href="<%= root_url %>">首页</a></li>
    </ul-->
    <ul class="top-nav-options pull-right unstyled">
      <% if current_user %>
      <li>欢迎：<a href="<%= u_url(current_user) %>"><i class="icon-user"></i><%= current_user.nickname %></a></li>
      <li><a href="<%= logout_url %>"><i class="icon-off"></i>退出</a></li>
      <% if ['admin'].include?(current_user.role) %>
      <li><a href="<%= admin_url %>"><i class="icon-briefcase"></i>管理</a></li>
      <% end %>
      <% else %>
      <li>
        <a href="<%= login_url %>">登陆</a>
        或
        <a href="<%= signup_url %>">注册</a>
      </li>
      <% end %>
    </ul>
  </div>
</div>