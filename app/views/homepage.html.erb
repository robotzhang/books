<%= provide(:stylesheet, stylesheet_link_tag('home')) %>
<div class="container">
  <div class="well">
    <div><%= simple_format(@poem.content) %></div>
    <div>
      ——
      <%= @poem.title %>
      <small><%= @poem.author.name %></small>
    </div>
  </div>

  <ul class="books unstyled clearfix">
    <% @books.each do |book| %>
    <li>
        <div class="cover"><a href="<%= book_url(book.seo_url) %>"><img src="<%= book.cover_image %>" title="<%= book.name %>" /></a></div>
        <div><a href="<%= book_url(book.seo_url) %>"><%= book.name %></a></div>
    </li>
    <% end %>
  </ul>
</div>