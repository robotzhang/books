<%= provide(:stylesheet, stylesheet_link_tag('home')) %>
<div class="container">
  <ul class="books unstyled clearfix">
    <% @books.each do |book| %>
    <li>
        <div class="cover"><a href="<%= book_url(book) %>"><img src="<%= book.cover_image %>" title="<%= book.name %>" /></a></div>
        <div><a href="<%= book_url(book) %>"><%= book.name %></a></div>
    </li>
    <% end %>
  </ul>
</div>