<%= form_for [:admin, @poem], :html => { :class => 'form-horizontal' } do |f| %>
    <% if @poem.errors.any? %>
    <div>
      <ul class="unstyled well-small alert-error">
        <% for message in @poem.errors.full_messages %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= f.hidden_field :id %>
    <div class="control-group">
        <%= f.label :title, '诗歌标题', :class => "control-label" %>
        <div class="controls"><%= f.text_field :title %></div>
    </div>

    <div class="control-group">
      <%= f.label :content, '内容', :class => "control-label" %>
      <div class="controls"><%= f.text_area :content, "rows" => 4, 'class' => 'span5' %></div>
    </div>

    <div class="control-group">
      <%= f.label :author_id, '作者id', :class => "control-label" %>
      <div class="controls"><%= f.text_field :author_id %></div>
    </div>

    <div class="form-actions">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
      <a href="<%= admin_poems_url %>"><i class="icon-share-alt"></i>返回图书管理</a>
    </div>
<% end %>